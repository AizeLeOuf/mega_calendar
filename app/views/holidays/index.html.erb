<h1><%= translate 'holidays' %></h1>

<table width="100%" height="80%">
  <tr>
    <td><%= translate 'user'%></td>
    <td><%= translate 'start' %></td>
    <td><%= translate 'end' %></td>
    <td><%= translate 'reason' %></td>
    <td><%= translate 'action' %></td>
  </tr>
  <% @res.each do |row| %>
      <td><%= row.user.blank? ? '' : row.user.lastname.to_s %> <%= row.user.firstname.to_s %></td>
      <td><%= row.start.blank? ? '' : row.start.to_date.to_s %></td>
      <td><%= row.end.blank? ? '' : row.end.to_date.to_s %></td>
      <td><%= row.reason==1 ? 'Отпуск' : row.reason==2 ? 'Больничный' : row.reason==3 ? 'Командировка' : '' %></td>
      <td><a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/show?id=<%= row.id.to_s %>"><%= translate 'show' %></a>&nbsp;<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/edit?id=<%= row.id.to_s %>"><%= translate 'edit' %></a>&nbsp;<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/destroy?id=<%= row.id.to_s %>"><%= translate 'destroy' %></a></td>
    </tr>
  <% end %>
  <% if @pagination == true %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/index?page=<%= @last_page.to_s %>"><%= translate 'prev' %></a>&nbsp;<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/index?page=<%= @new_page.to_s %>"><%= translate 'next' %></a></td>
  </tr>
  <% end %>
</table>
<a href="<%= Setting.plugin_mega_calendar['sub_path'] %>holidays/new"><%= translate 'new' %></a>
